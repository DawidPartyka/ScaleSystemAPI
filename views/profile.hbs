<div class="container mt-2">
    <div class="row">
        <div class="bg-light align-items-center text-center col p-3 ml-1 rounded">
            <img src="{{this.user.picture}}" alt="user" class="rounded-circle"/>
            <div class="mt-3">
                <h4 class="text-primary">{{this.user.nickname}}</h4>
                <p class="text-secondary mb-1">{{this.user.email}}</p>
                <p class="text-muted font-size-sm">Last activity: {{this.user.updated_at}}</p>
                {{#if this.user.email_verified}}
                    <p class="text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-patch-check" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10.354 6.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7 8.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                            <path d="m10.273 2.513-.921-.944.715-.698.622.637.89-.011a2.89 2.89 0 0 1 2.924 2.924l-.01.89.636.622a2.89 2.89 0 0 1 0 4.134l-.637.622.011.89a2.89 2.89 0 0 1-2.924 2.924l-.89-.01-.622.636a2.89 2.89 0 0 1-4.134 0l-.622-.637-.89.011a2.89 2.89 0 0 1-2.924-2.924l.01-.89-.636-.622a2.89 2.89 0 0 1 0-4.134l.637-.622-.011-.89a2.89 2.89 0 0 1 2.924-2.924l.89.01.622-.636a2.89 2.89 0 0 1 4.134 0l-.715.698a1.89 1.89 0 0 0-2.704 0l-.92.944-1.32-.016a1.89 1.89 0 0 0-1.911 1.912l.016 1.318-.944.921a1.89 1.89 0 0 0 0 2.704l.944.92-.016 1.32a1.89 1.89 0 0 0 1.912 1.911l1.318-.016.921.944a1.89 1.89 0 0 0 2.704 0l.92-.944 1.32.016a1.89 1.89 0 0 0 1.911-1.912l-.016-1.318.944-.921a1.89 1.89 0 0 0 0-2.704l-.944-.92.016-1.32a1.89 1.89 0 0 0-1.912-1.911l-1.318.016z"/>
                        </svg> Verified account</p>
                {{else}}
                    <p class="text-warning">Please verify your email. You should find your verification email at {{this.user.email}}.</p>
                {{/if}}
            </div>
        </div>

        <div class="col ml-1 p-3 bg-light rounded">
            <p class="text-primary">Check your logs in database</p>

            <div class="container">
                <p class="text-info">Start date</p>

                <div class="input-group date text-info" data-provide="datepicker" data-date-format="yyyy-mm-dd">
                    <input id="date-start" type="text" class="form-control">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>

            <div class="container">
                <p class="text-info">End date</p>

                <div class="input-group date text-info" data-provide="datepicker" data-date-format="yyyy-mm-dd">
                    <input id="date-end" type="text" class="form-control">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>

            <button id="date-submit" class="btn btn-primary float-right mt-2 mr-3">Get logs</button>
        </div>
    </div>

    <div class="row my-1">
        {{> scale/getAllUserScales}}
        {{> scale/updateScale }}
    </div>

    <div class="row my-1">
        {{> scale/deleteScale}}
    </div>
</div>
